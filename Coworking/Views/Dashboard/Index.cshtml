@model Coworking.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <div class="mb-4">
        <h1 class="display-5 fw-bold gradient-text">Admin Dashboard</h1>
        <p class="text-muted">Overview of your coworking space</p>
    </div>
    
    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="stats-card">
                <div class="stats-icon text-success">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <div class="stats-value">$@Model.TotalRevenue.ToString("N0")</div>
                <div class="stats-label">Total Revenue</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stats-card">
                <div class="stats-icon text-primary">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="stats-value">@Model.TotalBookings</div>
                <div class="stats-label">Total Bookings</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stats-card">
                <div class="stats-icon text-warning">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stats-value">@Model.ActiveBookings</div>
                <div class="stats-label">Active Bookings</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stats-card">
                <div class="stats-icon text-info">
                    <i class="fas fa-building"></i>
                </div>
                <div class="stats-value">@Model.OperationalRooms/@Model.TotalRooms</div>
                <div class="stats-label">Operational Rooms</div>
            </div>
        </div>
    </div>
    
    <!-- Recent Bookings -->
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="premium-card p-4">
                <h4 class="fw-bold mb-4">Recent Bookings</h4>
                @if (Model.RecentBookings != null && Model.RecentBookings.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Room</th>
                                    <th>User</th>
                                    <th>Date</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in Model.RecentBookings.Take(10))
                                {
                                    <tr>
                                        <td>@booking.Room.Name</td>
                                        <td>@booking.User.FullName</td>
                                        <td>@booking.StartTime.ToString("MMM dd, yyyy")</td>
                                        <td class="fw-bold">$@booking.TotalPrice</td>
                                        <td><span class="badge-@(booking.Status.ToString().ToLower())">@booking.Status</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No bookings yet</p>
                }
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="premium-card p-4">
                <h4 class="fw-bold mb-4">Quick Actions</h4>
                <div class="d-grid gap-3">
                    <a asp-controller="Rooms" asp-action="Manage" class="btn btn-outline-primary">
                        <i class="fas fa-building me-2"></i>Manage Rooms
                    </a>
                    <a asp-action="Calendar" class="btn btn-outline-primary">
                        <i class="fas fa-calendar me-2"></i>View Calendar
                    </a>
                    <a asp-action="Revenue" class="btn btn-outline-primary">
                        <i class="fas fa-chart-line me-2"></i>Revenue Report
                    </a>
                </div>
            </div>
            
            @if (Model.PopularRooms != null && Model.PopularRooms.Any())
            {
                <div class="premium-card p-4 mt-4">
                    <h5 class="fw-bold mb-3">Popular Rooms</h5>
                    @foreach (var room in Model.PopularRooms)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>@room.RoomName</span>
                            <span class="badge bg-primary">@room.BookingCount bookings</span>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
