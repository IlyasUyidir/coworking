@model List<Coworking.Models.Room>
@{
    ViewData["Title"] = "Manage Rooms";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold gradient-text">Manage Rooms</h1>
            <p class="text-muted">Administer all workspaces</p>
        </div>
        <a asp-action="Create" class="btn btn-premium">
            <i class="fas fa-plus me-2"></i>Add New Room
        </a>
    </div>
    
    <div class="premium-card p-4">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Capacity</th>
                            <th>Price/Hour</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@(string.IsNullOrEmpty(room.ImageUrl) ? "/images/rooms/default-room.jpg" : room.ImageUrl)" 
                                         alt="@room.Name" style="width: 60px; height: 60px; object-fit: cover; border-radius: var(--radius-md);">
                                </td>
                                <td class="fw-bold">@room.Name</td>
                                <td><i class="fas fa-users me-1"></i>@room.Capacity</td>
                                <td class="fw-bold text-primary">$@room.PricePerHour</td>
                                <td>
                                    @if (room.IsOperational)
                                    {
                                        <span class="badge bg-success">Operational</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-building fa-4x text-muted mb-3"></i>
                <h4>No Rooms Yet</h4>
                <p class="text-muted mb-4">Start by adding your first workspace</p>
                <a asp-action="Create" class="btn btn-premium">
                    <i class="fas fa-plus me-2"></i>Add Room
                </a>
            </div>
        }
    </div>
</div>
