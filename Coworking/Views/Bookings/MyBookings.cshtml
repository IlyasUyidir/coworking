@model List<Coworking.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold gradient-text">My Bookings</h1>
        <p class="lead text-muted">Manage your workspace reservations</p>
    </div>
    
    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var booking in Model)
            {
                <div class="col-lg-6">
                    <div class="premium-card p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h5 class="fw-bold mb-1">@booking.Room.Name</h5>
                                <p class="text-muted small mb-0">
                                    <i class="fas fa-calendar me-1"></i>
                                    @booking.StartTime.ToString("MMM dd, yyyy")
                                </p>
                            </div>
                            <span class="badge-@(booking.Status.ToString().ToLower())">
                                @booking.Status
                            </span>
                        </div>
                        
                        <div class="mb-3">
                            <div class="row g-2">
                                <div class="col-6">
                                    <small class="text-muted d-block">Start Time</small>
                                    <strong>@booking.StartTime.ToString("h:mm tt")</strong>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">End Time</small>
                                    <strong>@booking.EndTime.ToString("h:mm tt")</strong>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <div>
                                <small class="text-muted d-block">Total Price</small>
                                <h4 class="mb-0 text-primary">$@booking.TotalPrice</h4>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                @if (booking.Status == Coworking.Models.BookingStatus.Confirmed || booking.Status == Coworking.Models.BookingStatus.Pending)
                                {
                                    <form asp-action="Cancel" asp-route-id="@booking.Id" method="post" class="d-inline" 
                                          onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-times"></i> Cancel
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="premium-card p-5">
                <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                <h4>No Bookings Yet</h4>
                <p class="text-muted mb-4">Start by booking your first workspace</p>
                <a asp-controller="Rooms" asp-action="Index" class="btn btn-premium">
                    <i class="fas fa-search me-2"></i>Browse Workspaces
                </a>
            </div>
        </div>
    }
</div>
